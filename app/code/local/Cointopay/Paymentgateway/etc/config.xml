<?xml version="1.0"?>
<config>
  <modules>
    <Cointopay_Paymentgateway>
      <version>0.1.1</version>
    </Cointopay_Paymentgateway>
  </modules>
  <global>
    <models>
      <cointopaygateway>
        <class>Cointopay_Paymentgateway_Model</class>
      </cointopaygateway>
    </models>
    <helpers>
      <cointopaygateway>
        <class>Cointopay_Paymentgateway_Helper</class>
      </cointopaygateway>
    </helpers>
    <blocks>
      <cointopaygateway>
        <class>Cointopay_Paymentgateway_Block</class>
      </cointopaygateway>
    </blocks>
    <events>
        <sales_order_place_after>
            <observers>
                <cointopay_gateway_order>
                    <type>singleton</type>
                    <class>Cointopay_Paymentgateway_Model_Observer</class>
                    <method>cointopayOrder</method>
                </cointopay_gateway_order>
            </observers>
        </sales_order_place_after>
    </events>
  </global>
  <default>
    <payment>
      <cointopaygateway>
        <model>cointopaygateway/standard</model>
        <active>1</active>
        <order_status>pending</order_status>
        <title>Cointopay PaymentGateway</title>
        <payment_action>sale</payment_action>
        <allowspecific>0</allowspecific>
        <sort_order>1</sort_order>
      </cointopaygateway>
    </payment>
  </default>
  <frontend>
    <routers>
      <cointopaygateway>
        <use>standard</use>
        <args>
          <module>Cointopay_Paymentgateway</module>
          <frontName>cointopaygateway</frontName>
        </args>
      </cointopaygateway>
    </routers>
  </frontend>
  <adminhtml>
        <layout>
            <updates>
                <cointopaygateway>
                    <file>cointopaygateway.xml</file>
                </cointopaygateway>
            </updates>
        </layout>
        <routers>
            <cointopaygateway_admin_coins>
                <use>admin</use>
                <args>
                    <module>Cointopay_Paymentgateway</module>
                    <frontName>merchantcoins</frontName>
                </args>
            </cointopaygateway_admin_coins>
        </routers>
    </adminhtml>
</config>
